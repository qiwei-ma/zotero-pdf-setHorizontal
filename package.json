{
  "name": "set-horizontal-scrolling",
  "version": "0.0.3",
  "description": "Set horizontal scrolling and zooming to the page height as defaults.",
  "config": {
    "addonName": "Set HorizontalScroll",
    "addonID": "pdfsethorizontalscroll@euclpts.com",
    "addonRef": "pdfsethorizontalscroll",
    "addonInstance": "pdfsethorizontalscroll",
    "prefsPrefix": "extensions.zotero.pdfsethorizontalscroll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwei-ma/zotero-pdf-setHorizontal.git"
  },
  "author": "qiwei",
  "bugs": {
    "url": "https://github.com/qiwei-ma/zotero-pdf-setHorizontal/issues"
  },
  "homepage": "https://github.com/qiwei-ma/zotero-pdf-setHorizontal#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.0.0-1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.14.1",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "zotero-plugin-scaffold": "^0.5.0",
    "zotero-types": "^4.0.0-beta.10"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
